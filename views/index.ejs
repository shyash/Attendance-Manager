<script type="text/javascript">
  function expanded() {
    document.querySelector(".hambyclose").style.display="inline-block";
    document.querySelector(".hamby").style.display="none";
  document.querySelector(".small1").style.display="block";
  document.querySelector(".small2").style.display="block";
  document.querySelector(".small3").style.display="block";
  document.querySelector(".small1").style.animation="fadeIn 2s";
  document.querySelector(".small2").style.animation="fadeIn 2s";
  document.querySelector(".small3").style.animation="fadeIn 2s";
 }
