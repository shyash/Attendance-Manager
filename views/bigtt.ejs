<body>  <%var t  = new Date(),
      td = t.getUTCDate(),
      tm = t.getUTCMonth() + 1,
      ty = t.getUTCFullYear(),
       str = ty+""+tm+""+td;
      
      %>
<div id="wrapper">
<nav>
		<ul><%if(!currentUser){%>
			<li><a href="/login" class="log">Login</a></li>
			<li><a href="/register" class="log">Sign Up</a></li><%}else{%>
       <li style="float: left; margin: 15px; margin-left: 25px; font-size: 20px;"><a href="/withtt/combined/<%=ty%>/<%=tm%>"><i class="fas fa-arrow-left"></i></a></li>
      <li style="float: left; margin: 15px; margin-left: 25px; font-size: 20px;"><a href="/"><i class="fas fa-home"></i></li></a>
       <li style="float: left; margin: 15px; margin-left: 25px; font-size: 20px; cursor: pointer;" onclick="toggle();">Add a class<i class="fas fa-plus"></i></li>
			<li><a href="/logout" class="log">Logout</a></li><%}%>
		</ul>
</nav>

<section>

  <% if (subject.length===0) { -%>
 <div class="boxwrap "><a href="/withtt/combined/<%=ty%>/<%=tm%>"><div class="subholder" style="width: 300px; text-align: center;color: #565655; padding: 15px;margin-top: 70px; "> Try adding a Subject first</div></a></div>
 
<% } else { -%>
 

<div class="boxwrap2 hidden"><div class="box2" style="background: white; padding:10px;">

  <p>Add a class here: </p><form action="/addClass" method="POST">
  <select name="subject" style="height: 30px;" required>
    <% for (var i = 0; i < subject.length; i++) { -%>
      <option  value="<%=subject[i].name%>"><%=subject[i].name%></option>
    <% } -%>
  </select>

  <input type="time" name="time" style="height: 30px;margin-left: 10px;" required>
  <input type="checkbox" style="margin-left: 10px;" name="day" onclick="check(1)" value="Monday"><label for="Mon">Mon</label>
  <input type="checkbox" style="margin-left: 10px;" name="day" onclick="check(2)" value="Tuesday"><label for="Tue">Tue</label>
  <input type="checkbox" style="margin-left: 10px;" name="day" onclick="check(3)" value="Wednesday"><label for="Wed">Wed</label>
  <input type="checkbox" style="margin-left: 10px;" name="day" onclick="check(4)" value="Thursday"><label for="Thu">Thu</label>
  <input type="checkbox" style="margin-left: 10px;" name="day" onclick="check(5)" value="Friday"><label for="Fri">Fri</label>
  <input type="checkbox" style="margin-left: 10px;" name="day" onclick="check(6)" value="Saturday"><label for="Sat">Sat</label>
  <input type="checkbox" style="margin-left: 10px;" name="day" onclick="check(7)" value="Sunday"><label for="Sun">Sun</label>
  <button style="padding: 2px; background: white; cursor: pointer;margin-left: 10px;">Add</button>
   </form></div></div>
	<div class="boxwrap padding"><% if (error && error.length>0) { -%>
       <div class="error"><%=error%></div>
    <% } -%>
<% var arr = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]%>
<% for (var i = 0; i < arr.length; i++) { -%>
<div class="box">
 <p style="display: block;font-size: 20px; background: white;text-align: center;font-weight: 500"><%=arr[i]%></p>
<% tt.sort(function(a,b) {return (Number(a.time.slice(0,2)) > Number(b.time.slice(0,2))) ? 1 : (Number(b.time.slice(0,2)) > Number(a.time.slice(0,2))) ? -1 : 0} ).forEach(function(tt){ %>
  <% if (tt.day===arr[i]) { %>
<div class="subholder">
  
  <form method="POST" action="/tt/remove/<%=tt._id%>" style="float: right;" ><button style="background: rgba(0,0,0,0);border:0px;margin-top: 3px;"><i class="fas fa-times-circle" title="remove this class"></i></button></form>
  <p style="padding: 2px 2px 4px 6px;"><%=tt.sub%></p>
    <p style="padding: 2px 2px 4px 6px;"><%=tt.time%></p>
  </div>
 <% }})%>
</div>
<% } -%></div><% } -%>
</section>
</div>
<script type="text/javascript">
  function toggle() {
    document.querySelector(".boxwrap").classList.toggle("padding");
    document.querySelector(".boxwrap2").classList.toggle("hidden");
  }
  function check(num){var nn = num+1;
  
    var cb = document.querySelector('input[name="day"]:nth-of-type('+nn+')').checked;
    if(cb){document.querySelector("label:nth-of-type("+num+")").style.color="#1c79be";
  
  }
 
else{
 document.querySelector("label:nth-of-type("+num+")").style.color="black";
  }
}


 
</script>
  


