 <script type="text/javascript">
   function delalert() {
       var ans = prompt("deleting this subject will erase all its data from time table and attendance history are you sure to delete? Just type y or n");
   if(ans.toLowerCase()=="yes"||ans.toLowerCase()=="yeah"||ans.toLowerCase()=="yup"||ans.toLowerCase()=="y")
   {document.querySelector(".delform").submit();}
   else{
     document.querySelector(".delform").href="/sub/edit/<%=subject._id%>";
   }
   }
 </script>
