			ty = t.getUTCFullYear();%>
		<div class="boxwrap"><div class="box"><div class="subholder">
			<form method="POST" action="/delete/withttsub/<%=subject._id%>" class="delform">
     <p onclick="delalert()"  style="  
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
      font-size:   15px;
cursor: pointer;
             margin:5px auto;
            margin-left: 5%; 
                   width:  90%;
                   margin-bottom: 10px;float: left;
                   background:red;
      ">Delete this subject</p>   
      </form>
			<form method="POST" action="/sub/edit/<%=subject._id%>">
				<p style="display: block;font-size: 20px; background: white;text-align: center;">Name: </p> <input type="text" name="name" value="<%=subject.name%>" required>
        <p style="display: block;font-size: 20px; background: white;text-align: center;">Attended: </p> <input type="Number" name="attended" value="<%=subject.attended%>" required title="total should be greater than attended" min="0">
